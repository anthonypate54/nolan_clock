{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++17",
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-Wall",
                "-g",
                "-I/usr/local/opt/sfml/include",
                "-L/usr/local/opt/sfml/lib",
                "${workspaceFolder}/*.cpp",
                "-lsfml-graphics.2.6.1",
                "-lsfml-window.2.6.1",
                "-lsfml-system.2.6.1",
                "-o",
                "${workspaceFolder}/NolanClock",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: /usr/bin/clang++"
        }
    ],
    "version": "2.0.0"
}